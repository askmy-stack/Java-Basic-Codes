package com.company;
import java.util.Scanner;

public class Practice {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Please Enter the Number of Choice:");
        int n= sc.nextInt();
        int i = 1;
        while (i<=n) {
            int j=1;
            while (j<=i) {
                System.out.print("*");
                j++;
            }
            i++;
            System.out.println();
        }
    }
}
